<!--pages/informationReleaseDetail/informationReleaseDetail.wxml-->
<!--内容描述与图片-->
<view class="IRD">
  <view class="IRD-description">
    <view class="des_head">
      <text>{{des_title}}</text>
    </view>
  </view>
  <view class="des_box">
    <text>{{des_content}}</text>
  </view>
  <!--相关信息-->
  <view>
    <view class="info1">联系人:</view>
    <view class="info2">联系方式:</view>
    <view class="info3">具体位置:</view>
    <view class="info4">发帖费用:</view>
    <view class="info5">是否置顶</view>
    <view class="map1">
      <map style="width: 100%; height: 300px;" latitude="{{latitude}}" longitude="{{longitude}}" markers="{{markers}}" covers="{{covers}}">
      </map>
    </view>
    <view class="weui-cell weui-cell_input">
      <input class="weui-input" auto-focus placeholder="将会获取焦点" />
    </view>
  </view>
</view>